<Dataset name="example"
       dapVersion="4.0"
       dmrVersion="1.0"
       xmlns="http://xml.opendap.org/ns/DAP/4.0#">

    <!-- Group name="g.@/\$" -->
    <Group name="g.@$">
        <!-- Provide a dimension with a name that needs escaping "lon/2.\" -->
        <Dimension name="lon2." size="20"/>
    </Group>

    <!-- reference the dimension and group with funny names -->
    <Int32 name="funny">
        <!-- Dim name="/g\.@\/\\$/lon\/2\.\\"/ -->
        <Dim name="/g.@$/lon2."/>
    </Int32>

</Dataset>
