/var/log/bes/*log {
    missingok
    notifempty
    sharedscripts
    delaycompress
    postrotate
        /sbin/service besd stop > /dev/null 2>/dev/null || true
        # Ask the OLFS to stop the current bes child listener
        /sbin/service besd start > /dev/null 2>/dev/null || true
    endscript
}
