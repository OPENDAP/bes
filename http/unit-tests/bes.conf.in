

BES.Catalog.catalog.RootDirectory=@abs_top_srcdir@/http
BES.Catalog.catalog.TypeMatch+=nc:.*\.nc(4)?(\.bz2|\.gz|\.Z)?$

BES.LogName=/dev/null

Http.Cache.dir=/tmp
Http.Cache.prefix=http_unit_tests_
Http.Cache.size=500

Http.No.Retry.Regex=^https:\/\/.*\?code\=.*$
