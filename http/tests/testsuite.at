# Process with autom4te to create an -*- Autotest -*- test suite.

AT_INIT([bes/http/tests testsuite])

m4_define([VECHO], AS_IF([test -z "$at_verbose"], [echo $1]))

# run the same command in parallel - two processes
# $1 URL
# $3 xfail
m4_define([AT_PARALLEL_TEST], [dnl

    AT_SETUP([$1])
    AT_KEYWORDS([remote_resource_tester parallel])

    input=$1
    bes_conf=$abs_builddir/bes.conf

    # AT_XFAIL_IF is always run first regardless where it appears. jhrg 5/27/22
    AT_XFAIL_IF([test z$2 = zxfail])

    VECHO(["COMMANDS: remote_resource_tester $bes_conf $input d1 or d2&"])

    # The special variable $$ is the process id of the current (shell) process,
    # not the process running remote_resource_tester. jhrg 5/10/23
    $abs_builddir/remote_resource_tester $bes_conf $input $abs_builddir/d1-$$ > $abs_builddir/tmp1-$$ &
    p1=$!
    AS_IF([test -z "$at_verbose"], [echo "Started 1: $p1"])

    $abs_builddir/remote_resource_tester $bes_conf $input $abs_builddir/d2-$$ > $abs_builddir/tmp2-$$ &
    p2=$!
    VECHO(["Started 2: $p2"])

    wait $p1
    s1=$?
    VECHO(["Caught $p1: $s1"])
    wait $p2
    s2=$?
    VECHO(["Caught $p2: $s2"])

    dnl  AT_CHECK (commands, [status = ‘0’], [stdout], [stderr], [run-if-fail], [run-if-pass])
    AT_CHECK([test $s1 -eq 0])
    AT_CHECK([test $s2 -eq 0])

    # Clean up the temporary files
    rm -f $abs_builddir/{d1-$$,d2-$$,tmp1-$$,tmp2-$$}

    AT_CLEANUP
])

# This takes no arguments but must be run inside a test
m4_define([INIT_S3_MOCK], [dnl
    VECHO(["Starting python mock-s3 service"])
    VECHO(["python3 $abs_builddir/mock-s3/main.py >/dev/null 2>&1 &"])
    python3 $abs_builddir/mock-s3/main.py >/dev/null 2>&1 &
    AT_CHECK([test $! -ne 0])

    VECHO(["Wait for the service to arrive"])
    while ! curl -s http://localhost:8000/200/1/init >/dev/null; do sleep 1; done

    AT_CHECK([curl -s http://localhost:8000/200/1/init >/dev/null])
])

# This takes no arguments but must be run inside a test
m4_define([STOP_S3_MOCK], [dnl
    VECHO(["Shut down the service"])
    AT_CHECK([curl -s http://localhost:8000/exit >/dev/null])
])

# run the same command in parallel - two processes
# $1 mock-s3 URL
# $2 expected size
# $3 xfail
m4_define([AT_RETRY_TEST], [dnl

    AT_SETUP([$1])
    AT_KEYWORDS([remote_resource_tester retry])

    INIT_S3_MOCK

    input=$1
    expected_size=$2
    bes_conf=$abs_builddir/bes.conf

    # AT_XFAIL_IF is always run first regardless where it appears. jhrg 5/27/22
    AT_XFAIL_IF([test z$3 = zxfail])

    VECHO(["COMMAND: remote_resource_tester -r $bes_conf $input $expected_size"])

    # $abs_builddir/remote_resource_tester -r $bes_conf $input $expected_size > /dev/null &
    # p1=$!
    # AS_IF([test -z "$at_verbose"], [echo "Started 1: $p1"])

    # wait $p1
    # s1=$?
    # AS_IF([test -z "$at_verbose"], [echo "Caught $p1: $s1"])

    dnl  AT_CHECK (commands, [status = ‘0’], [stdout], [stderr], [run-if-fail], [run-if-pass])
    # AT_CHECK([test $s1 -eq 0])

    STOP_S3_MOCK

    AT_CLEANUP
])

