
dnl Process this file with autoconf to produce a configure script.

AC_REVISION($Id: configure.in,v 1.11 1998/09/10 20:33:49 jehamby Exp $)
AC_INIT(src)
AC_CONFIG_AUX_DIR(../../etc)

AC_PREFIX_DEFAULT("\$(DODS_ROOT)")

dnl DODS_ROOT is the fully qualified pathname to the root of the DODS
dnl subtree. 

DODS_GET_DODS_ROOT
DODS_DIRECTORY_VERSION

dnl `depend' is the command to use to generate dependencies for Makefiles.

depend=${dods_root}/etc/depend.sh
AC_SUBST(depend)

CFLAGS="-g -O2"

dnl Turn off all optimizations for g++ 2.7.x since this code uses the STL.
DODS_GCC_VERSION
echo "GCC_VER: $GCC_VER"
case $GCC_VER in
    2.8*) CXXFLAGS="-g -O0";;
    *) CXXFLAGS="-g -O0";;
esac

dnl GNU ld doesn't need this, but others do.
LDFLAGS="-g"

dnl Checks for programs.

AC_PROG_AWK
AC_PROG_CC
AC_ISC_POSIX
AC_PROG_LN_S
AC_PROG_MAKE_SET
AC_PROG_RANLIB
AC_PROG_CPP
AC_PROG_INSTALL

DODS_GCC
DODS_PROG_LEX
DODS_PROG_BISON
DODS_CHECK_GCC_DEBUG
DODS_FIND_GPP_INC

dnl Never use exceptions with this code until 2.8.x is out!

dnl DODS_CHECK_EXCEPTIONS

DODS_OS
DODS_MACHINE
if test "$OS" = ultrix && test "$MACHINE" = vax; then
    case "$CC" in
        /bin/cc*|cc*)
echo "changing C compiler to \`vcc' because \`cc' floating-point is broken"
            CC=vcc
            ;;
    esac
fi

CXX=${CXX-g++}
AC_MSG_RESULT(Setting CXX to $CXX)
AC_SUBST(CXX)

if echo $INSTALL | egrep 'install-sh'
then
	INSTALL="$(DODS_ROOT)/etc/install-sh -c"
	AC_SUBST(INSTALL)
fi

dnl Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS(fcntl.h limits.h unistd.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_TYPE_OFF_T
AC_TYPE_SIZE_T

dnl Checks for library functions.
AC_FUNC_VPRINTF
AC_CHECK_FUNCS(strerror strtol)

DODS_CHECK_SIZES

DODS_LIBS
DODS_HDF_LIBRARY

DODS_COMPRESSION_LIB
DODS_RX_LIB
DODS_WWW_LIB
DODS_EXPECT_LIB

DODS_EFENCE
DODS_DBNEW
DODS_DEBUG_OPTION

AC_OUTPUT(Makefile hdfclass/Makefile)
