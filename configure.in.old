
dnl -*- m4 -*-
dnl Process this file with autoconf to produce a configure script.

AC_REVISION($Id$)

AC_INIT(h5util.h)
AC_CONFIG_HEADER(config_hdf5.h)
AC_CONFIG_AUX_DIR(../../etc)

AC_PREFIX_DEFAULT("\$(DODS_ROOT)")

dnl I think that the new dir naming scheme obviates this... 6/5/98 jhrg
dnl the variable `dir' is used as a basename for the directory tar file

DODS_GET_DODS_ROOT
DODS_DIRECTORY_VERSION

DODS_SERVER_VERSION=\"hdf-dods/$VERSION\"
AC_DEFINE_UNQUOTED(DODS_SERVER_VERSION, $DODS_SERVER_VERSION)

dnl Find where GNU tar lives on the user's system

DODS_PROG_GTAR

dnl The command to use to generate dependencies for Makefiles

depend=${dods_relative}/etc/depend.sh
AC_SUBST(depend)

dnl flags for the compilers and linkers - set these before locating the
dnl actual tools since some of the AC_PROG macros set these `flag variables'
dnl to default values otherwise.

AC_CANONICAL_HOST
AC_SUBST(host)

# Until further notice OS X port doesn't get -gstabs because of an
# apparent bug in their gcc 3.3 clone (a beta).  If you see this after
# 1/1/2005, you can probably remove it.
case "${host_cpu}:${host_vendor}:${host_os}" in
     powerpc:apple:netbsd*)
       CFLAGS=${CFLAGS-"-O2 $CFLAGS"}
       CXXFLAGS=${CXXFLAGS-"-O2 $CXXFLAGS"}
       break;;
    *:*:*)
       CFLAGS=${CFLAGS-"-gstabs -O2 $CFLAGS"}
       CXXFLAGS=${CXXFLAGS-"-gstabs -O2 $CXXFLAGS"}
       break;;
esac    

dnl You should have g++, but you can override that with an environment
dnl variable. 

CXX=${CXX-g++}
AC_MSG_RESULT(Setting CXX to $CXX)
AC_SUBST(CXX)

AC_ISC_POSIX
AC_PROG_LN_S
AC_PROG_CC
AC_PROG_CXX
AC_PROG_RANLIB
AC_PROG_MAKE_SET
AC_PROG_INSTALL

DODS_GCC

dnl Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS(fcntl.h limits.h unistd.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_C_INLINE
AC_TYPE_SIZE_T

dnl Checks for specific libraries
AC_ARG_WITH(hdf5_path,
    [  --with-hdf5-path=ARG    Pathname to the hdf 5 software],
    hdf5_path=${withval}, hdf5_path="/usr/local/hdf5")

LDFLAGS="$LDFLAGS -L${hdf5_path}/lib"
AC_CHECK_LIB(hdf5, H5open, hdf_found=1, hdf_found=0, -lz)
if test $hdf_found -ne 1
then
    AC_MSG_ERROR(HDF5 library not found (looked in ${hdf5_path}/lib)!)
fi 
AC_SUBST(hdf5_path)

dnl Checks for library functions.
AC_FUNC_ALLOCA
AC_CHECK_FUNCS(strdup strftime timegm mktime)

DODS_CHECK_SIZES

DODS_RX_LIB
DODS_WWW_LIB
DODS_COMPRESSION_LIB
DODS_XML_LIB

DODS_EFENCE
DODS_DBNEW
DODS_DEBUG_OPTION

dnl autoheader macros; tack some text at the top and bottom of config_dap.h.in

AH_TOP([#ifndef _config_dap_h
#define _config_dap_h])

AH_BOTTOM([/* Shorthand for gcc's unused attribute feature */
#if defined(__GNUG__) || defined(__GNUC__)
#define not_used __attribute__ ((unused))
#else
#define not_used 
#endif /* __GNUG__ || __GNUC__ */

#endif /* _config_dap_h */])

AC_OUTPUT(Makefile)
