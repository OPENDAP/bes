DIR=h4mapwriter-1.0.8
INSTALL_DIR=`pwd | sed s/$DIR/install/`

echo "BUILD_AND_INSTALL $DIR"

echo
echo "BUILD_AND_INSTALL: ./configure CC=$INSTALL_DIR/bin/h4cc --prefix=$INSTALL_DIR"
./configure CC=$INSTALL_DIR/bin/h4cc --prefix=$INSTALL_DIR

echo
echo "BUILD_AND_INSTALL: make"
make

# We don't do make check because the files we check aren't distributed with
# the source
#echo
#echo "BUILD_AND_INSTALL: make check"
#make check

echo
echo "BUILD_AND_INSTALL: make install"
make install

echo
echo "BUILD_AND_INSTALL: make distclean"
make distclean

echo
echo "BUILD_AND_INSTALL: done with $DIR"
