# Process with autom4te to create an -*- Autotest -*- test suite.

m4_include([handler_tests_macros.m4])

# These tests use the server at RPI and it's often off line.
# jhrg 12/1/14
#
# AT_BESCMD_RESPONSE_TEST([test.00.bescmd])
